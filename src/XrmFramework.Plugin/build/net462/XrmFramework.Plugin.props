<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <ItemGroup>
        <Reference Include="System.Activities">
            <Private>true</Private>
        </Reference>
        <PackageReference Update="Newtonsoft.Json" Pack="true" />
    </ItemGroup>

    <ItemGroup>
        <Compile Include="$(RootFolder)\$(XrmFrameworkCoreProjectName)\**\*.cs" Exclude="$(RootFolder)\$(XrmFrameworkCoreProjectName)\obj\**;$(RootFolder)\$(XrmFrameworkCoreProjectName)\bin\**" Link="__Imports\$(XrmFrameworkCoreProjectName)\%(RecursiveDir)%(Filename)%(Extension)" />
        <ProjectReference Include="$(RootFolder)\$(XrmFrameworkCoreProjectName)\$(XrmFrameworkCoreProjectName).csproj">
            <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
        </ProjectReference>
    </ItemGroup>

    <PropertyGroup>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <DefineConstants>$(DefineConstants);PLUGIN</DefineConstants>
    </PropertyGroup>
</Project>