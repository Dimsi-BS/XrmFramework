<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net462;netcoreapp3.1</TargetFrameworks>
    
    <XrmFrameworkDisableDependencyProjectGeneration>true</XrmFrameworkDisableDependencyProjectGeneration>
    <DefineConstants>$(DefineConstants);DISABLE_DI</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="XrmFramework" Version="#{GitBuildVersionSimple}#" />
    <PackageReference Include="XrmFramework.CoreProject" Version="#{GitBuildVersionSimple}#" />
  </ItemGroup>
  
  <ItemGroup>
    <Compile Include="../../**/*.cs" Exclude="../../obj/**;../../bin/**" />
  </ItemGroup>
  
  
  <ItemGroup Condition="'$(TargetFramework.TrimEnd(`0123456789`))' == 'net'">
    <PackageReference Include="Microsoft.CrmSdk.XrmTooling.CoreAssembly" Version="9.1.0.92" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="5.0.2" />
    <PackageReference Include="Castle.Core" Version="4.4.1" />
    <PackageReference Include="Serilog" Version="2.10.0" />
    <PackageReference Include="Serilog.Sinks.Console" Version="4.0.0" />
  </ItemGroup>
  
  <ItemGroup Condition="'$(TargetFramework)' == 'netcoreapp3.1'">
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="Castle.Core" Version="4.4.1" />
    <PackageReference Include="Serilog" Version="2.10.0" />
    <PackageReference Include="Serilog.Sinks.Console" Version="4.0.0" />
  </ItemGroup>
</Project>
