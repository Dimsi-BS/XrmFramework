<Project>

  <Import Project="XrmFramework.Tools.MsBuild.Generation.props" Condition="'$(_XrmFrameworkPropsImported)'==''"/>

  <PropertyGroup>
    <_XrmFramework_Tools_MsBuild_Generation_Imported>true</_XrmFramework_Tools_MsBuild_Generation_Imported>
  </PropertyGroup>

  <PropertyGroup Condition="'$(BuildServerMode)' == ''">
    <BuildServerMode Condition="'$(BuildingInsideVisualStudio)'=='true'">false</BuildServerMode>
    <BuildServerMode Condition="'$(BuildingInsideVisualStudio)'!='true'">true</BuildServerMode>

    <!--
      net.sdk experimental support:
      - currently we only want to support either classic project system or netsdk project system.
      - currently we don't want to support globbing with classic project system => ensure globbing only get enabled with 'UsingMicrosoftNETSdk'
      - currently we are supporting $(EnableDefaultCompileItems) for disabling globbing support for codebehind files
    -->
    <_XrmFramework_EnableDefaultCompileItems Condition="'$(XrmFramework_EnableDefaultCompileItems)' == '' And '$(UsingMicrosoftNETSdk)' == 'true'">true</_XrmFramework_EnableDefaultCompileItems>
    <_XrmFramework_EnableDefaultCompileItems Condition="'$(XrmFramework_EnableDefaultCompileItems)' == 'true' And '$(UsingMicrosoftNETSdk)' == 'true'">true</_XrmFramework_EnableDefaultCompileItems>
  </PropertyGroup>

  <PropertyGroup>
    <BuildDependsOn>
      BeforeUpdateFeatureFilesInProject;
      UpdateFeatureFilesInProject;
      IncludeCodeBehindFilesInProject;
      AfterUpdateFeatureFilesInProject;
      $(BuildDependsOn)
    </BuildDependsOn>
    <CleanDependsOn>
      CleanFeatureFilesInProject;
      $(CleanDependsOn)
    </CleanDependsOn>
    <RebuildDependsOn>
      SwitchToForceGenerate;
      $(RebuildDependsOn)
    </RebuildDependsOn>
  </PropertyGroup>

  <!--
    net.sdk support: update default compile items to show generated files as nested items
  -->
  <ItemGroup Condition="'$(_XrmFramework_EnableDefaultCompileItems)' == 'true' and '$(EnableDefaultItems)' == 'true' ">
    <Compile Update="@(XrmFrameworkServiceFiles->'%(CodeBehindFile)')"
             DependentUpon="%(Filename)"
             AutoGen="true"
             DesignTime="true"
             Visible="true"
             Condition="'$(EnableDefaultCompileItems)' == 'true'" />

  </ItemGroup>


  <Target Name="WarnForFeatureCodeBehindFilesWithoutCorrespondingFeatureFile" AfterTargets="CoreCompile"
          Condition="'$(XrmFramework_EnableWarnForFeatureCodeBehindFilesWithoutCorrespondingFeatureFile)' == 'true'">
    <Warning Text="For codebehind file '@(XrmFrameworkObsoleteCodeBehindFiles)', no feature file was found." File="@(XrmFrameworkObsoleteCodeBehindFiles)" Condition="'@(XrmFrameworkObsoleteCodeBehindFiles)' != ''" />
  </Target>


  <Target Name="SwitchToForceGenerate">
    <PropertyGroup>
      <ForceGeneration>true</ForceGeneration>
    </PropertyGroup>
  </Target>


  <Target Name="UpdateFeatureFilesInProject"
          DependsOnTargets="BeforeUpdateFeatureFilesInProject">

    <Message Text="XrmFrameworkServiceFiles: @(XrmFrameworkServiceFiles)" Importance="high" Condition="'$(VerboseOutput)' == 'true'" />

    <Error
      Text="XrmFramework designer codebehind generation is not compatible with MSBuild codebehind generation. The custom tool must be removed from the file. See https://www.XrmFramework.org/documentation/Generate-Tests-from-MsBuild"
      File="@(None)"
      Condition="%(None.Extension) == '.feature' AND %(None.Generator) == 'XrmFrameworkSingleFileGenerator'"/>

    <!-- <PropertyGroup>
      <XrmFrameworkCodeBehindOutputPath Condition="'$(XrmFrameworkCodeBehindOutputPath)' == ''">Features.Generated</XrmFrameworkCodeBehindOutputPath>
    </PropertyGroup> -->

    <PropertyGroup Condition="'$(TargetFrameworkVersion)' != ''">
      <XrmFramework_TargetFramework>$(TargetFrameworkVersion)</XrmFramework_TargetFramework>
    </PropertyGroup>
    <PropertyGroup Condition="'$(TargetFramework)' != ''">
      <XrmFramework_TargetFramework>$(TargetFramework)</XrmFramework_TargetFramework>
      <XrmFramework_TargetFrameworks>$(TargetFramework)</XrmFramework_TargetFrameworks>
    </PropertyGroup>
    <PropertyGroup Condition="'$(TargetFrameworks)' != ''">
      <XrmFramework_TargetFrameworks>$(TargetFrameworks)</XrmFramework_TargetFrameworks>
    </PropertyGroup>

    <GenerateServiceFileCodeBehindTask
      ProjectPath="$(MSBuildProjectFullPath)"
      OutputPath="$(XrmFrameworkCodeBehindOutputPath)"
      ServiceFiles="@(XrmFrameworkServiceFiles)"
      RootNamespace="$(RootNamespace)"
      GeneratorPlugins="@(XrmFrameworkGeneratorPlugins)" 
      
      MSBuildVersion="$(MSBuildVersion)"
      AssemblyName="$(AssemblyName)"
      TargetFrameworks="$(XrmFramework_TargetFrameworks)"
      TargetFramework="$(XrmFramework_TargetFramework)"
      ProjectGuid="$(ProjectGuid)"
      >

      <Output TaskParameter="GeneratedFiles" ItemName="XrmFrameworkGeneratedFiles" />
    </GenerateServiceFileCodeBehindTask>

    <Message Text="XrmFrameworkGeneratedFiles: %(XrmFrameworkGeneratedFiles.Identity)" Importance="high" Condition="'$(VerboseOutput)' == 'true'" />


    <!--
      net.sdk support: globbing does not support including files which are dynamically generated inside targets, we have to manually update compile items
    -->
    <ItemGroup Condition="'$(_XrmFramework_EnableDefaultCompileItems)' == 'true' and '$(EnableDefaultItems)' == 'true' and '$(EnableDefaultCompileItems)' == 'true'">

      <!-- if this is the first time generation of codebehind files, we have to manually add them as compile items -->
      <Compile Include="@(XrmFrameworkServiceFiles->'%(CodeBehindFile)')"
               Exclude="@(Compile)"/>

      <!--
        eather if codebehind files are added manually to compile item group or are added by net.sdk globbing support,
        ensure they are nested under feature files like in previous XrmFramework versions
        currently, we cannot use itemgroup update attribute inside a target because of some bugs in MSBuild (all items will be updated)
        - https://github.com/Microsoft/msbuild/issues/1618
        - https://github.com/Microsoft/msbuild/issues/2835
        - https://github.com/Microsoft/msbuild/issues/1124
      -->
      <Compile DependentUpon="@(XrmFrameworkServiceFiles)"
               AutoGen="true"
               DesignTime="true"
               Visible="true"
               Condition="'%(Compile.Identity)' == '@(XrmFrameworkServiceFiles->'%(CodeBehindFile)')'" />

      <!-- remove files which got obsolete, typically after rename operation, or getting changes from source control -->
      <Compile Remove="@(XrmFrameworkObsoleteCodeBehindFiles)" />
    </ItemGroup>

  </Target>

  <Target Name="BeforeUpdateFeatureFilesInProject">

  </Target>

  <Target Name="IncludeCodeBehindFilesInProject" DependsOnTargets="UpdateFeatureFilesInProject">
    <ItemGroup Condition="'$(UsingMicrosoftNETSdk)' != 'true'">
      <Compile Include="@(XrmFrameworkGeneratedFiles)" Exclude="@(Compile)" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Include="@(XrmFrameworkServiceFiles)" />
    </ItemGroup>
    
  </Target>

  <Target Name="AfterUpdateFeatureFilesInProject" DependsOnTargets="IncludeCodeBehindFilesInProject">
    <!-- include any generated XrmFramework files in the compilation of the project if not included yet -->
  </Target>

  <Target Name="CleanFeatureFilesInProject" Condition="'$(XrmFramework_DeleteCodeBehindFilesOnCleanRebuild)' == 'true'">
    <!-- remove known codebehind files for existing feature files -->
    <Delete Files="%(XrmFrameworkServiceFiles.CodeBehindFile)" ContinueOnError="true" />

    <!-- remove obsolete codebehind files, scenarios:
         - after rename operation
         - after deletion of a feature file
         - after pulling latest changes from version control with above changes
     -->
    <Delete Files="@(XrmFrameworkObsoleteCodeBehindFiles)" ContinueOnError="true" />
  </Target>
</Project>